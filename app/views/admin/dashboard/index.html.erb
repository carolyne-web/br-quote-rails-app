<div class="bg-white shadow">
  <div class="px-4 sm:px-6 lg:max-w-7xl lg:mx-auto lg:px-8">
    <div class="py-6 md:flex md:items-center md:justify-between">
      <div class="flex-1 min-w-0">
        <h1 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
          Admin Dashboard
        </h1>
      </div>
    </div>
  </div>
</div>

<!-- Alert Cards -->
<div class="mt-8">
  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4">    <!-- Pending Quotations Alert -->
    <% if @pending_quotations_count > 0 %>
      <div class="bg-gradient-to-r from-orange-500 to-red-500 overflow-hidden shadow rounded-lg">
        <div class="p-4">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="ml-3 flex-1">
              <dl>
                <dt class="text-sm font-semibold text-white">Pending Reviews</dt>
                <dd class="text-xl font-bold text-white"><%= @pending_quotations_count %></dd>
                <dd class="text-xs text-white opacity-90">Need attention</dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Main Stats Grid -->
<div class="mt-8">
  <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4">
    <!-- Production Houses -->
    <div class="bg-white overflow-hidden shadow rounded-lg border-l-4 border-blue-500">
      <div class="p-4">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="h-8 w-8 bg-blue-100 rounded-md flex items-center justify-center">
              <svg class="h-4 w-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 919.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-3 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-700">Production Houses</dt>
              <dd class="text-2xl font-bold text-gray-900"><%= @production_houses_count %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <!-- Total Quotations -->
    <div class="bg-white overflow-hidden shadow rounded-lg border-l-4 border-green-500">
      <div class="p-4">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="h-8 w-8 bg-green-100 rounded-md flex items-center justify-center">
              <svg class="h-4 w-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-3 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-700">Total Quotations</dt>
              <dd class="text-2xl font-bold text-gray-900"><%= @quotations_count %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <!-- Support Requests -->
    <div class="bg-white overflow-hidden shadow rounded-lg border-l-4 border-purple-500">
      <div class="p-4">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="h-8 w-8 bg-purple-100 rounded-md flex items-center justify-center">
              <svg class="h-4 w-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0718 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-3 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-700">Support Requests</dt>
              <dd class="text-2xl font-bold text-gray-900"><%= @support_requests_count || 0 %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <!-- Territories -->
    <div class="bg-white overflow-hidden shadow rounded-lg border-l-4 border-indigo-500">
      <div class="p-4">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="h-8 w-8 bg-indigo-100 rounded-md flex items-center justify-center">
              <svg class="h-4 w-4 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-3 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-700">Territories</dt>
              <dd class="text-2xl font-bold text-gray-900"><%= @territories_count %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="mt-8">
    <div class="bg-white shadow rounded-lg border">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg leading-6 font-medium text-gray-900 flex items-center">
          Quick Actions
        </h3>
      </div>
      <div class="px-6 py-4">
        <div class="flex flex-wrap gap-2">
          <%= link_to admin_quotations_path, class: "inline-flex items-center px-3 py-1.5 bg-blue-500 hover:bg-blue-600 text-black text-sm font-medium rounded transition-colors duration-200" do %>
            <svg class="h-3 w-3 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            Quotations
          <% end %>

          <%= link_to admin_support_requests_path, class: "inline-flex items-center px-3 py-1.5 bg-purple-500 hover:bg-purple-600 text-black text-sm font-medium rounded transition-colors duration-200" do %>
            <svg class="h-3 w-3 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"></path>
            </svg>
            Support
          <% end %>

          <%= link_to admin_production_houses_path, class: "inline-flex items-center px-3 py-1.5 bg-green-500 hover:bg-green-600 text-black text-sm font-medium rounded transition-colors duration-200" do %>
            <%# <svg class="h-3 w-3 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 919.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg> %>
            Production Houses
          <% end %>

          <%= link_to admin_settings_path, class: "inline-flex items-center px-3 py-1.5 bg-gray-500 hover:bg-gray-600 text-black text-sm font-medium rounded transition-colors duration-200" do %>
            <svg class="h-3 w-3 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            Settings
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Activity -->
  <% if @recent_quotations.any? %>
    <div class="mt-8">
      <div class="bg-white shadow rounded-lg border">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg leading-6 font-medium text-gray-900 flex items-center">
            Recent Quotations
          </h3>
        </div>
        <div class="px-6 py-4">
          <div class="overflow-hidden">
            <table class="min-w-full">
              <thead>
                <tr class="border-b border-gray-200">
                  <th class="pb-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Project</th>
                  <th class="pb-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Production House</th>
                  <th class="pb-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                  <th class="pb-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-100">
                <% @recent_quotations.each do |quotation| %>
                  <tr class="hover:bg-gray-50">
                    <td class="py-3 text-sm font-medium text-gray-900">
                      <%= link_to quotation.project_name, admin_quotation_path(quotation), class: "text-blue-600 hover:text-blue-800" %>
                    </td>
                    <td class="py-3 text-sm text-gray-500">
                      <%= quotation.production_house&.name || 'N/A' %>
                    </td>
                    <td class="py-3">
                      <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full <%= quotation.status_badge_class %>">
                        <%= quotation.status.humanize %>
                      </span>
                    </td>
                    <td class="py-3 text-sm text-gray-500">
                      <%= quotation.created_at.strftime("%b %d, %Y") %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>