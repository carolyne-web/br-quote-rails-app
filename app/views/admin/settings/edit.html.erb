<div class="max-w-2xl mx-auto">
  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">
        Edit Setting: <%= @setting.key.humanize.titleize %>
      </h3>

      <%= form_with model: [:admin, @setting], url: admin_setting_path(@setting), local: true, class: "mt-5 space-y-4" do |f| %>
        <div>
          <%= f.label :value, class: "block text-sm font-medium text-gray-700" %>
          <% if @setting.data_type == 'boolean' %>
            <%= f.select :value, options_for_select([['True', 'true'], ['False', 'false']], @setting.value),
                {}, class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md" %>
          <% else %>
            <%= f.text_field :value, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          <% end %>
          <p class="mt-2 text-sm text-gray-500">Data type: <%= @setting.data_type %></p>
        </div>

        <div class="flex justify-end space-x-3">
          <%= link_to "Cancel", admin_settings_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50" %>
          <%= f.submit "Update Setting", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
