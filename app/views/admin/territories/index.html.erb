<div class="bg-white shadow">
  <div class="px-4 sm:px-6 lg:max-w-7xl lg:mx-auto lg:px-8">
    <div class="py-6 md:flex md:items-center md:justify-between">
      <div class="flex-1 min-w-0">
        <h1 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
          Territory Management
        </h1>
        <p class="mt-1 text-sm text-gray-500">
          Manage territories and their percentage multipliers for quotations
        </p>
      </div>
      <div class="mt-4 flex md:mt-0 md:ml-4">
        <%= link_to new_admin_territory_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          Add Territory
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="mt-8 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <%= form_with url: bulk_update_admin_territories_path, method: :patch, local: true do |f| %>
    <% if @grouped_territories.any? %>
      <% @grouped_territories.each do |group_name, territories| %>
        <div class="mb-8 bg-white shadow overflow-hidden sm:rounded-lg">
          <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
            <h3 class="text-lg leading-6 font-medium text-gray-900">
              <%= group_name || "Individual Territories" %>
            </h3>
            <p class="mt-1 max-w-2xl text-sm text-gray-500">
              <%= territories.count %> <%= territories.count == 1 ? 'territory' : 'territories' %> in this group
            </p>
          </div>

          <div class="divide-y divide-gray-200">
            <% territories.each do |territory| %>
              <div class="px-6 py-4 flex items-center justify-between hover:bg-gray-50 transition-colors">
                <div class="flex-1">
                  <div class="flex items-center space-x-4">
                    <!-- Territory Info -->
                    <div class="min-w-0 flex-1">
                      <h4 class="text-sm font-medium text-gray-900">
                        <%= territory.name %>
                      </h4>
                      <div class="flex items-center space-x-2 text-xs text-gray-500 mt-1">
                        <span>Code: <%= territory.code || "N/A" %></span>
                        <% if territory.media_type.present? %>
                          <span>â€¢</span>
                          <span>Media: <%= territory.media_type.humanize %></span>
                        <% end %>
                      </div>
                    </div>
                    
                    <!-- Percentage Input -->
                    <div class="flex items-center space-x-2">
                      <%= number_field_tag "territories[#{territory.id}]", territory.percentage,
                          class: "w-20 px-3 py-2 text-sm border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500",
                          step: 5, min: 0, max: 1000 %>
                      <span class="text-sm text-gray-600 font-medium">%</span>
                    </div>
                  </div>
                </div>
                
                <!-- Actions -->
                <div class="ml-4 flex items-center space-x-2">
                  <%= link_to edit_admin_territory_path(territory), 
                      class: "inline-flex items-center px-3 py-1.5 border border-gray-300 text-xs font-medium rounded text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" do %>
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    Edit
                  <% end %>
                  
                  <%= button_to admin_territory_path(territory), method: :delete,
                      data: { 
                        confirm: "Are you sure you want to delete '#{territory.name}'? This cannot be undone.",
                        turbo_method: :delete
                      },
                      class: "inline-flex items-center px-3 py-1.5 border border-red-300 text-xs font-medium rounded text-red-700 bg-red-50 hover:bg-red-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors" do %>
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                    Delete
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Update Button -->
      <div class="flex justify-end bg-white rounded-lg shadow p-6">
        <%= f.submit "Update All Percentages", class: "inline-flex justify-center items-center px-6 py-3 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-12 text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No territories found</h3>
          <p class="mt-1 text-sm text-gray-500">Get started by creating your first territory.</p>
          <div class="mt-6">
            <%= link_to new_admin_territory_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
              Create First Territory
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
