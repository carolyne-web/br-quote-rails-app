<div class="bg-white shadow">
  <div class="px-4 sm:px-6 lg:max-w-7xl lg:mx-auto lg:px-8">
    <div class="py-6 md:flex md:items-center md:justify-between">
      <div class="flex-1 min-w-0">
        <h1 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
          Territory Management
        </h1>
      </div>
      <div class="mt-4 flex md:mt-0 md:ml-4">
        <%= link_to "Add Territory", new_admin_territory_path, class: "ml-3 inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700" %>
      </div>
    </div>
  </div>
</div>

<div class="mt-8">
  <%= form_with url: bulk_update_admin_territories_path, method: :patch, local: true do |f| %>
    <% @grouped_territories.each do |group_name, territories| %>
      <div class="mb-8">
        <h3 class="text-lg font-medium text-gray-900 mb-4">
          <%= group_name || "Individual Countries" %>
        </h3>

        <div class="bg-white shadow overflow-hidden sm:rounded-md">
          <ul class="divide-y divide-gray-200">
            <% territories.each do |territory| %>
              <li class="px-6 py-4">
                <div class="flex items-center justify-between">
                  <div class="flex-1">
                    <h4 class="text-sm font-medium text-gray-900"><%= territory.name %></h4>
                    <p class="text-sm text-gray-500">Code: <%= territory.code || "N/A" %></p>
                  </div>

                  <div class="flex items-center space-x-4">
                    <div class="flex items-center">
                      <%= number_field_tag "territories[#{territory.id}]", territory.percentage,
                          class: "w-24 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm border-gray-300 rounded-md",
                          step: 5 %>
                      <span class="ml-2">%</span>
                    </div>

                    <div class="flex space-x-2">
                      <%= link_to "Edit", edit_admin_territory_path(territory),
                          class: "text-indigo-600 hover:text-indigo-900 text-sm" %>
                      <%= button_to "Delete", admin_territory_path(territory),
                          method: :delete,
                          data: { confirm: "Are you sure?" },
                          class: "text-red-600 hover:text-red-900 text-sm" %>
                    </div>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <div class="flex justify-end">
      <%= f.submit "Update All Percentages", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
    </div>
  <% end %>
</div>
