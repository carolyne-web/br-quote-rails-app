<div class="bg-white shadow">
  <div class="px-4 sm:px-6 lg:max-w-7xl lg:mx-auto lg:px-8">
    <div class="py-6 md:flex md:items-center md:justify-between">
      <div class="flex-1 min-w-0">
        <h1 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
          Add New Territory
        </h1>
        <p class="mt-1 text-sm text-gray-500">
          Create a new territory with pricing multiplier
        </p>
      </div>
      <div class="mt-4 flex md:mt-0 md:ml-4">
        <%= link_to admin_territories_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to Territories
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="mt-8 max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="bg-white shadow rounded-lg">
    <%= form_with model: [:admin, @territory], local: true, class: "space-y-6 p-6" do |f| %>
      <% if @territory.errors.any? %>
        <div class="bg-red-50 border border-red-200 text-red-600 px-4 py-3 rounded-lg">
          <h3 class="font-semibold mb-2">Please correct the following errors:</h3>
          <ul class="list-disc list-inside text-sm">
            <% @territory.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Territory Name -->
        <div>
          <%= f.label :name, "Territory Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :name, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500",
              placeholder: "e.g., United States, Europe, Asia-Pacific",
              required: true %>
        </div>

        <!-- Territory Code -->
        <div>
          <%= f.label :code, "Territory Code", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :code, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500",
              placeholder: "e.g., US, EU, AP (optional)",
              maxlength: 10 %>
          <p class="mt-1 text-xs text-gray-500">Short code for easy reference (optional)</p>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Percentage -->
        <div>
          <%= f.label :percentage, "Percentage Multiplier", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <div class="flex items-center">
            <%= f.number_field :percentage, 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500",
                step: 5, min: 0, max: 1000,
                placeholder: "0",
                required: true %>
            <span class="ml-2 text-sm text-gray-600 font-medium">%</span>
          </div>
          <p class="mt-1 text-xs text-gray-500">Additional percentage to add to base talent fees</p>
        </div>

        <!-- Group Name -->
        <div>
          <%= f.label :group_name, "Group Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :group_name, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500",
              placeholder: "e.g., Europe, Asia, Americas (optional)" %>
          <p class="mt-1 text-xs text-gray-500">Group territories together for organization</p>
        </div>
      </div>

      <!-- Media Type -->
      <div>
        <%= f.label :media_type, "Media Type", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-3">
          <% [
            ['All Media', 'all_media'],
            ['All Moving Media', 'all_moving_media'],
            ['All Stills Media', 'all_stills_media'],
            ['All Non-Broadcast Media', 'all_non_broadcast_media'],
            ['One Medium Only', 'one_medium_only'],
            ['Two Media Only', 'two_media_only'],
            ['Three or More Media', 'three_or_more_media'],
            ['Stand-Alone OOH', 'stand_alone_ooh'],
            ['Television', 'television'], 
            ['Digital', 'digital'],
            ['Cinema', 'cinema'],
            ['Print', 'print'],
            ['Radio', 'radio']
          ].each do |label, value| %>
            <label class="flex items-center space-x-2 p-2 border rounded-lg hover:bg-gray-50 cursor-pointer">
              <%= f.radio_button :media_type, value, class: "text-indigo-600 focus:ring-indigo-500" %>
              <span class="text-sm"><%= label %></span>
            </label>
          <% end %>
        </div>
      </div>

      <!-- Form Actions -->
      <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
        <%= link_to "Cancel", admin_territories_path, 
            class: "px-4 py-2 border border-gray-300 rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" %>
        <%= f.submit "Create Territory", 
            class: "px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" %>
      </div>
    <% end %>
  </div>
</div>
