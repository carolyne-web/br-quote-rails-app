<!DOCTYPE html>
<html>
  <head>
    <title>BR Quote System</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50">
    <nav class="shadow-lg">
      <div class="max-w-7xl mx-auto px-4 sm:px-4 lg:px-6">
        <div class="flex justify-between h-16">
          <div class="flex items-center">
            <div class="flex items-center space-x-3">
              <div class="p-1.5">
                <img src="https://brcasting.co.za/wp-content/uploads/2021/05/BR-logo-1-1536x858.jpg" 
                     alt="BR Casting Logo" 
                     class="h-8 w-auto object-contain rounded">
              </div>
              <h1 class="text-xl font-bold text-black">Talent Q</h1>
            </div>
          </div>
          <div class="flex items-center space-x-6">
            <% if admin_logged_in? %>
              <%= link_to admin_dashboard_path, class: "flex items-center space-x-2 px-3 py-2 rounded-lg text-gray-900 hover:text-gray hover:bg-white/10 transition-all duration-200" do %>
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m8 7l4-4 4 4"></path>
                </svg>
                <span class="text-sm font-medium">Dashboard</span>
              <% end %>
              
              <!-- Admin Profile Link -->
              <%= link_to admin_profile_path, class: "flex items-center space-x-2 px-3 py-2 rounded-lg text-[#1C1E20] hover:text-gray hover:bg-white/10 transition-all duration-200" do %>
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
                <span class="text-sm font-medium">Profile</span>
              <% end %>
             
              <!-- Admin Logout -->
              <%= button_to admin_logout_path, method: :delete, class: "flex items-center space-x-2 px-3 py-2 rounded-lg text-[#1C1E20] hover:text-gray hover:bg-red-500/20 transition-all duration-200" do %>
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                </svg>
                <span class="text-sm font-medium">Logout</span>
              <% end %>
            <% elsif logged_in? %>
              <!-- Production House User -->
              <div class="flex items-center space-x-4">
                <div class="flex items-center space-x-3 px-3 py-2 rounded-lg bg-white/10">
                  <div class="h-8 w-8 bg-white/20 rounded-full flex items-center justify-center">
                    <svg class="h-4 w-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                  </div>
                  <span class="text-sm font-medium">Welcome, <%= current_production_house.name %></span>
                </div>
                
                <%= link_to quotations_path, class: "flex items-center space-x-2 px-3 py-2 rounded-lg text-black hover:text-blue hover:bg-blue/10 transition-all duration-200" do %>
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                  <span class="text-sm font-medium">My Quotations</span>
                <% end %>
                
                <%= button_to logout_path, method: :delete, class: "flex items-center space-x-2 px-3 py-2 rounded-lg text-black hover:text-white hover:bg-red-500 transition-all duration-200" do %>
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                  </svg>
                  <span class="text-sm font-medium">Logout</span>
                <% end %>
              </div>
            <% else %>
              <!-- Login Options -->
              <div class="flex items-center space-x-3">
                <%= link_to login_path, class: "flex items-center space-x-2 px-4 py-2 rounded-lg bg-white text-blue-600 hover:bg-blue-50 font-medium transition-all duration-200 shadow-sm" do %>
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                  </svg>
                  <span class="text-sm">Login</span>
                <% end %>
                
                <%= link_to admin_login_path, class: "flex items-center space-x-2 px-3 py-2 rounded-lg text-black hover:text-blue transition-all duration-200" do %>
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  <span class="text-sm font-medium">Admin</span>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </nav>

    <% if flash[:notice] %>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-3">
        <div class="bg-green-50 border-l-4 border-green-400 px-4 py-2 rounded-lg shadow-sm" role="alert">
          <div class="flex items-center">
            <svg class="h-4 w-4 text-green-400 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            <span class="text-sm text-green-800"><%= flash[:notice] %></span>
          </div>
        </div>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-3">
        <div class="bg-red-50 border-l-4 border-red-400 px-4 py-2 rounded-lg shadow-sm" role="alert">
          <div class="flex items-center">
            <svg class="h-4 w-4 text-red-400 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
            </svg>
            <span class="text-sm text-red-800"><%= flash[:alert] %></span>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Admin Welcome Popup -->
    <% if admin_logged_in? && session[:show_admin_welcome] %>
      <div id="admin-welcome-popup" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
        <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
          <div class="mt-3 text-center">
            <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-green-100 mb-4">
              <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-medium text-gray-900">Welcome back, Admin!</h3>
            <div class="mt-4 space-y-2">
              <% new_quotations_count = Quotation.where('created_at > ?', 24.hours.ago).count %>
              <% pending_quotations_count = Quotation.where(status: 'pending').count %>
              <% if new_quotations_count > 0 %>
                <p class="text-sm text-gray-600"><%= new_quotations_count %> new quotation<%= 's' if new_quotations_count != 1 %> in the last 24 hours</p>
              <% end %>
              <% if pending_quotations_count > 0 %>
                <p class="text-sm text-gray-600"><%= pending_quotations_count %> quotation<%= 's' if pending_quotations_count != 1 %> awaiting approval</p>
              <% end %>
              <% if new_quotations_count == 0 && pending_quotations_count == 0 %>
                <p class="text-sm text-gray-600">All caught up! No new notifications.</p>
              <% end %>
            </div>
            <div class="flex space-x-3 mt-6">
              <%= link_to admin_quotations_path, class: "flex-1 px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 text-center" do %>
                View Quotations
              <% end %>
              <button onclick="closeAdminWelcome()" class="flex-1 px-4 py-2 bg-gray-300 text-gray-700 text-sm font-medium rounded-md hover:bg-gray-400">
                Close
              </button>
            </div>
          </div>
        </div>
      </div>
      <script>
        function closeAdminWelcome() {
          document.getElementById('admin-welcome-popup').style.display = 'none';
          fetch('/admin/dismiss_welcome', { method: 'POST', headers: { 'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content } });
        }
      </script>
    <% end %>

    <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
      <%= yield %>
    </main>
  </body>
</html>
