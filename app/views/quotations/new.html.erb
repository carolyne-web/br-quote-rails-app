function updateAdjustedRate(categoryId) {
  const baseRates = {
    1: <%= Setting.find_by(key: 'lead_base_rate')&.typed_value || 0 %>,
    2: <%= Setting.find_by(key: 'second_lead_base_rate')&.typed_value || 0 %>,
